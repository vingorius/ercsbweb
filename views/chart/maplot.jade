extends ../layout/basiclayout

block content
	div.container.chart_base_container
		div#maplot_view(style={'padding': '0px', 'margin': '0px', 'width': '900px', 'height': '660px', 'float': 'left'})
		div#maplot_result(style={'padding': '0px', 'margin': '0px', 'width': '500px', 'height': '660px', 'float': 'left'})
			div#maplot_result_view
				div.btn-toolbar
					div.input-group.spinner
						input.form-control(type='text', value='0.05')
						div.input-group-btn-vertical
							button.btn.btn-default#redraw_up(type='button')
								i.fa.fa-caret-up
							button.btn.btn-default#redraw_down(type='button')
								i.fa.fa-caret-down
					button.btn.btn-default#redraw_button(type='button') redraw
					button.btn.btn-default#download_button(type='button') download
					button.btn.btn-default#reset_button(type='button') reset
					button.btn.btn-default#undo_button(type='button') undo
				div.row
					div.table_header
						table.table.table-striped(style={'font-size' : '12px'})
							caption Seleted gene table
							thead
								tr
									th #
									th gene
									th x
									th y
									th p	
					div.table_body
						table.table.table-striped#result_table(style={'font-size' : '12px'})
							tbody#result_body
block append scripts
	script(src='/bower_components/requirejs/require.js', data-main='/js/index')
block append stylesheets
	link(rel='stylesheet', href='/stylesheets/chart/maplot.css')
