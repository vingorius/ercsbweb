        div#navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li: a(href="#") Menu0
            li: a(href="#") Menu1
            li: a(href="#") Menu2
            li: a(href="/restricted") Admin
          ul.nav.navbar-nav.navbar-right
            if(!user)
                li: a(href="/login")
                    i.glyphicon.glyphicon-user 
                    span(style={'padding-left': '5px'}) login
                li: a(href="/register")
                    i.glyphicon.glyphicon-check 
                    span(style={'padding-left': '5px'}) register
