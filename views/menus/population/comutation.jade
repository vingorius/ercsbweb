extends ../../layout/analysislayout

block rightcontent
	div.container.chart_container(style={"margin" : "20px"})
		div.row
			div#comutationplot_empty_lt(style={'float' : 'left', 'padding' : '0px', 'margin' : '0px', 'width' : '150px', 'height' : '100px'})
			div#comutationplot_sample(style={'float': 'left', 'padding-bottom': '0px', 'margin': '0px', 'width': '900px', 'height': '100px', 'overflow-y': 'hidden', 'overflow-x': 'hidden'})
			div#comutationplot_scale(style={'float': 'left', 'padding': '0px', 'margin': '0px', 'width': '150px', 'height': '100px'})
		div.row
			div#comutationplot_gene(style={'padding': '0px', 'margin': '0px', 'float': 'left', 'width': '150px', 'height': '650px'})
			div#comutationplot_heatmap(style={'padding': '0px', 'margin': '0px', 'float': 'left', 'width': '900px', 'height': '650px', 'overflow-x' : 'hidden', 'overflow-y': 'hidden', 'border' : '1px solid rgb(236, 236, 236)'})
			div#comutationplot_pq(style={'padding': '0px', 'margin': '0px', 'float': 'left', 'width': '150px', 'height': '650px'})
		div.row
			div#comutationplot_empty_lb(style={'float' : 'left', 'padding' : '0px', 'margin' : '0px', 'width' : '150px', 'height' : '100px'})
			div#comutationplot_legend(style={'float' : 'left', 'padding': '0px', 'margin': '0px', 'width': '900px', 'height': '150px'})
			div#comutationplot_empty_rb(style={'float' : 'left', 'padding' : '0px', 'margin' : '0px', 'width' : '150px', 'height' : '100px'})
	div.tooltip_chart(style={ "display" : "none" })
block append scripts
	script(src='/bower_components/canvg-gabelerner/StackBlur.js')
	script(src='/bower_components/canvg-gabelerner/rgbcolor.js')
	script(src='/bower_components/imagesloaded/imagesloaded.pkgd.js')
	script(src='/js/population/mutationallandscape.js')
	script(src='/bower_components/requirejs/require.js', defer, data-main='/js/chart/init', onload='mutational_landscape_call("#{sample.id}", "#{sample.type}")')
block append stylesheets
	link(rel='stylesheet', href='/bower_components/spinkit/css/spinkit.css')
	link(rel='stylesheet', href='/stylesheets/chart/chart.css')
	link(rel='stylesheet', href='/stylesheets/population/comutationplot.css')
